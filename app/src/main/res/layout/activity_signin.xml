<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/signin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true">

        <com.hetulpatel.fellow.fellowv2.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgrey"
            android:text="Hey I’m your"
            android:textSize="20dp"/>

        <com.hetulpatel.fellow.fellowv2.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fellow!"
            android:textSize="40dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/blue"
            android:layout_marginBottom="30dp"/>

        <com.hetulpatel.fellow.fellowv2.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don’t worry now."
            android:textSize="12dp"
            android:textColor="@color/darkgrey"/>

        <com.hetulpatel.fellow.fellowv2.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/darkgrey"
            android:text="I’ll manage and save your notes for you!"/>

        <com.hetulpatel.fellow.fellowv2.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:textColor="@color/darkgrey"
            android:text="Just follow the steps as I tell you..."/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/signin_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/signin_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="50dp"
            android:background="@color/devider"/>


        <ImageView
            android:id="@+id/login_button"
            android:layout_width="71dp"
            android:layout_height="57dp"
            android:src="@drawable/driveicon"
            android:layout_marginTop="45dp"/>

        <com.hetulpatel.fellow.fellowv2.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="So, are you ready?"
            android:textSize="10dp"
            android:textColor="@color/darkgrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="50dp"
            android:background="@color/devider"
            android:layout_marginTop="45dp"/>

    </LinearLayout>

    <com.hetulpatel.fellow.fellowv2.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/blue"
        android:textSize="10dp"
        android:text="I’ll save your notes to your google drive!\nYou can access it easily and speedily."
        android:id="@+id/signin_3" />


</RelativeLayout>